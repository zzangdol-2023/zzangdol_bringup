<launch>
    <arg name="usb_config" default="true"/>
  
    <arg unless="$(arg usb_config)" name="lider_usb_port" value="0"/>
    <arg     if="$(arg usb_config)" name="lider_usb_port" value="1"/>
    
    <node name="rplidarNode" pkg="rplidar_ros" type="rplidarNode" output="screen">
        <param name="serial_port" type="string" value="/dev/ttyUSB$(arg lider_usb_port)"/>
        <param name="serial_baudrate" type="int" value="115200"/>
        
        <!-- <param name="frame_id" type="string" value="laser"/> -->
        <param name="frame_id" type="string" value="lidar_link"/>
        <param name="inverted" type="bool" value="false"/>
        <param name="angle_compensate" type="bool" value="true"/>
    </node>
    
    
    
<!-- <node pkg="hls_lfcd_lds_driver" type="hlds_laser_publisher" name="turtlebot3_lds" output="screen">
	<param name="port" value="/dev/ttyUSB1"/>
	<param name="frame_id" value="$(arg set_frame_id)"/>
    </node> -->
</launch>
